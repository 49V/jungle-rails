Hello,
<p>
  Thanks for ordering from Jungle!
</p>

  <header class="page-header">
    <h1>Order #<%= @order.id %></h1>
    <h3><%= @order.email%></h3>
  </header>

  <div class="panel panel-default items">
    <table class="table table-bordered">
      <thead>
        <tr>
          <th colspan="2">Product</th>
          <th>Unit Price</th>
          <th>Quantity</th>
          <th>Price</th>
        </tr>
      </thead>
      <tbody>
        <%= render partial: '/user_mailer/item', collection: @items, :products => @products  %>
      </tbody>
      <tfoot>
        <tr>
          <th colspan="4">
            TOTAL:
          </th>
          <th>
            $<%= @order.calculate_total%>
          </th>
        </tr>
      </tfoot>
    </table>
  </div>